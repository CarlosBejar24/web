
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>F1 Drivers</title>
    <link rel="stylesheet" href="/public/style.css">
</head>
<body>
    <h1>F1 Drivers and Teams</h1>
    <form action="/add" method="POST">
        <label for="number">Number:</label>
        <input type="number" name="number" required>
        <label for="code">Code:</label>
        <input type="text" name="code" required>
        <label for="forename">Forename:</label>
        <input type="text" name="forename" required>
        <label for="surname">Surname:</label>
        <input type="text" name="surname" required>
        <label for="current_team">Team:</label>
        <select name="current_team">
            <% teams.forEach(team => { %>
                <option value="<%= team %>"><%= team %></option>
            <% }); %>
        </select>
        <button type="submit">Add Driver</button>
    </form>

    <h2>Drivers</h2>
    <ul>
        <% drivers.forEach(driver => { %>
            <li>
                <%= driver.forename %> <%= driver.surname %> (<%= driver.current_team %>)
                <form action="/edit/<%= driver._id %>" method="POST" style="display:inline;">
                    <button type="submit">Edit</button>
                </form>
            </li>
        <% }); %>
    </ul>
</body>
</html>
